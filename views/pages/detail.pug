extends ../base

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=product.data.image.alt src=product.data.image.url)

      .detail__information
        p.detail__information__collection=product.data.collection.data.full_title
        h1.detail__information__title=product.data.title

        .detail__information__content
          .detail__information__highlights
            each highlight in product.data.highlights
              p.detail__information__highlight
                svg.detail__information__icon
                  use(xlink:href=`sprite-${highlight.icon.toLowerCase()}`)
                span.detail__information__highlight__text=highlight.text

          .detail__information__list
            each info in product.data.informations
              p.detail__information__item
                strong.detail__information__item__title=info.label
                span.detail__information__item__description=info.description

          a.detail__information__link(href=product.data.link_url.url target="_blank")=product.data.link_text

